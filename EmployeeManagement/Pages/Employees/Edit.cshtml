@page
@model EmployeeManagement.Pages.Employees.EditModel
@{
    ViewData["Title"] = "Edit Employee";
}

<div class="container mt-5">
    <h2>Edit Employee</h2>
    <form method="post">
        <input type="hidden" asp-for="Employee.Id" />

        <div class="mb-3">
            <label for="Name" class="form-label">Name</label>
            <input type="text" class="form-control" id="Name" asp-for="Employee.Name" required />
        </div>

        <div class="mb-3">
            <label for="Position" class="form-label">Position</label>
            <input type="text" class="form-control" id="Position" asp-for="Employee.Position" required />
        </div>

        <div class="mb-3">
            <label for="Age" class="form-label">Age</label>
            <input type="number" class="form-control" id="Age" asp-for="Employee.Age" required />
        </div>

        <button type="submit" class="btn btn-primary">Save Changes</button>
        <a asp-page="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
