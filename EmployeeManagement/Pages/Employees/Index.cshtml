@page
@model EmployeeManagement.Pages.Employees.IndexModel
@{
    ViewData["Title"] = "Employee List";
}

<div class="container mt-5">
    <div class="row justify-content-between">
        <div class="col-auto">
            <h2>Employee List</h2>
        </div>
        <div class="col-auto">
            <a asp-page="Create" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Add New Employee
            </a>
        </div>
    </div>
    
    <table class="table table-striped mt-3">
        <thead>
            <tr>
                <th>Name</th>
                <th>Position</th>
                <th>Age</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model.Employees)
            {
                <tr>
                    <td>@employee.Name</td>
                    <td>@employee.Position</td>
                    <td>@employee.Age</td>
                    <td>
                        <a asp-page="Edit" asp-route-id="@employee.Id" class="btn btn-warning btn-sm">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-page="Delete" asp-route-id="@employee.Id" class="btn btn-danger btn-sm">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
